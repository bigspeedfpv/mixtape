generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model PlatformLink {
    uuid String @id @default(uuid()) @db.VarChar(36)
    platform Platform
    link String @unique @db.VarChar(255)
    song Song @relation(fields: [songId], references: [uuid])
    songId String

    @@index([songId])
    @@index([link])
}

model Song {
    uuid String @id @default(uuid()) @db.VarChar(36)
    title String @db.VarChar(255)
    artist String @db.VarChar(255)
    platformLinks PlatformLink[]
    playlists Playlist[]
}

model Playlist {
    uuid String @id @default(uuid()) @db.VarChar(36)
    name String @db.VarChar(255)
    accessedAt DateTime @default(now())
    songs Song[]
}

enum Platform {
    Spotify
    ITunes
    AppleMusic
    Youtube
    YoutubeMusic
    Google
    GoogleStore
    Pandora
    Deezer
    Tidal
    AmazonStore
    AmazonMusic
    SoundCloud
    Napster
    Yandex
    Spinrilla
    Audius
    Anghami
    Boomplay
    Audiomack
}
